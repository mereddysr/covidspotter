<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#20E0F2F1"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/csdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"

        android:textColor="#000" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Category : "></TextView>

        <TextView
        android:id="@+id/csate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#5d5d5d"
        android:textStyle="bold" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Tested : "
        android:textColor="#000"></TextView>

    <TextView
        android:id="@+id/cstotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#5FD6BF"
        android:hint="0"
        android:textColorHint="#5FD6BF"
        android:textStyle="bold" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Positive : "></TextView>

        <TextView
            android:id="@+id/cspos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="0"
            android:textColor="#E70A24"

            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textColorHint="#E70A24"
            android:layout_height="wrap_content"
            android:text="Negative : "></TextView>
        <TextView
            android:id="@+id/csneg"
            android:layout_width="match_parent"
            android:hint="0"
            android:layout_height="wrap_content"
            android:textColor="#58E70A"
            android:textColorHint="#58E70A"

            android:textStyle="bold" />

    </LinearLayout>






</LinearLayout>