<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".authoredit">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Covid Spotter"></TextView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/auth_enter"
        android:hint="Enter Patient Email...">

    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/auth_search"
        android:layout_height="wrap_content"
        android:background="#A5D6A7"
        android:text="Search">

    </Button>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="40dp"
        android:id="@+id/auth_sh_hide"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="match_parent"
            android:hint="Email"
                android:id="@+id/auth_us_email"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:hint="Name"
            android:id="@+id/auth_us_name"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#9B9A9A"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Having Covid Positive"
                android:textColor="#fff"
                />
            <Spinner
                android:layout_width="100dp"
                android:id="@+id/select_spin"

                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>

            <Button
                android:id="@+id/cs_fra_update"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="#A5D6A7"
                android:text="Update">

            </Button>
        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
</LinearLayout>